<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/contact_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:background="@color/custom_field_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

    <TextView
        android:id="@+id/first_name_initial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/contact_image_view"
        app:layout_constraintBottom_toBottomOf="@id/contact_image_view"
        app:layout_constraintStart_toStartOf="@id/contact_image_view"
        app:layout_constraintEnd_toEndOf="@id/contact_image_view"/>

    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Jude Kwashie"
        android:textColor="@color/full_name_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/contact_image_view"
        app:layout_constraintStart_toEndOf="@+id/contact_image_view"
        app:layout_constraintTop_toTopOf="@+id/contact_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>